*     
      padding 0
      margin 0
      box-sizing border-box
      font-family 'Montserrat', sans-serif
      font-weight 400
      
      

.header
      width 100vw
      position fixed

      &__container
            
            widht 100%
            height 12vh
            

            margin 0 auto

            display flex

            padding 0 15px
            justify-content space-between

            

            background #000
            
            &-left
                  max-width 640px
                  width 100%
                 
                  display flex

                  align-items center
                  justify-content flex-start
                  //border 1px solid red

                  img
                        max-width 150px
                        width 100%
            
            &-center
                  max-width 640px
                  width 100%
                  
                  display flex

                  align-items center
                  justify-content center
                  position relative
                  //border 1px solid red
                  

            &-search
                  max-width 640px
                  width 100%
                 
                  display flex

                  justify-content center

                  position relative
                  
                  input
                        max-width 550px
                        width 100%
                        height 50%
                        border 1px solid #232323
                        border-radius 5px

                        background #606060
                        
                        
                        padding 15px

                        font-style italic

                  input::placeholder
                        color #232323
                        font-size 16px


                  svg
                        max-width 25px
                        width 100%
                        position absolute
                        left 88%
                            
                 
                  
            &-right
                  max-width 640px
                  width 100%
                  
                  display flex

                  align-items center
                  justify-content flex-end
                  

                  img
                        max-width 30px
                        margin 0 20px
                  
                  
.banner 
      &__container 
            display block
            
            width 100vw
      
            margin 0 auto
            position relative
            
            
            img 
                  width 100vw
                  height 840px
                  object-fit cover  


            &-arrow
                  background #000
                  display flex

                  height 5vh
                  
                 
                  justify-content space-between

                  img
                        max-width 1px
                  
                        cursor pointer

.products
      background #000

      &__container 
            max-width 1620px
            width 100%
            margin 0 auto
            padding 0 15px
            
            h2 
                  font-size 3rem
                  font-weight 700

                  text-transform uppercase
                  text-align center
                  color #fff
                  text-shadow 5px 5px 20px #2D5673

                  

                  &::after 
                        content '' 
                        width 200px
                        height 8px
                        background #047fb8
                        display block
                        margin 0 auto

            &-list
                  display flex
                  max-width 1920px
                  width 100%
                  justify-content space-between

                  flex-wrap wrap

            &-movie 
                  border 1px solid #000
                  border-radius 5px

                  max-width 340px
                  width 100%

                  margin 40px 0

                  background #202020

                        

            .movie-banner
                  position relative

            .movie-img
                  border-radius 5px
                  transition 200ms all ease-in-out

                  :hover      
                        transform scale(1.1)

            .favorite 
                  max-width 30px
                  width 100%

                  position absolute

                  left 290px
                  top 15px

                  cursor pointer
            
            .date 
                  font-size 12px
                  position absolute
                  

                  padding 0 4px

                  background #000
                  color #fff
                  border 1px solid #000
                  border-radius 5px

                  left 115px
                  top 170px
            
            h3 
                  font-size 32px
                  line-height 40px
                  font-weight 700

                  text-align center
                  

                  color #fff
            
            .ajust
                  font-size 26px
                  line-height 40px
                  font-weight 700

                  text-align center
                  

                  color #fff
            
            p
                  color #fff

            .movie-info
                  max-width 340px
                  width 100%

                  display flex
                  justify-content center
            
            .classification
                  display flex
                  max-width 50%
                  width 100%

                  justify-content flex-end
                  
                  padding 10px 20px
                 
                  //border 1px solid green
                  
                  img
                        margin-right 8px
            
            .type
                  max-width 50%
                  width 100%
                  
                  padding 10px 20px
                  //border 1px solid green
            .price
                  text-align center 

                  padding 20px

                  font-size 22px
                  

            input
                  width 100%

                  font-size 26px
                  font-weight 600
                  padding 10px
                  background #057DB3
                  color #fff
                  border 1px solid #057DB3

                  border-radius 0 0 5px 5px

                  cursor pointer

                  &:hover
                        background #057DB3
                        box-shadow 0 0 5px #057DB3, 0 0 25px #057DB3, 0 0 50px #057DB3, 0 0 200px #057DB3
                        border 1px solid #057DB3
.brands
            max-width 100vw
            margin 40px auto

            &__container
                  max-width 70%
                  margin 50px auto
                  //border 1px solid red

                  padding 50px 0
                  
                  
                  h2 
                        font-size 3rem
                        font-weight 700

                        text-transform uppercase
                        text-align center
                        //text-shadow 5px 5px 20px #2D5673

                        margin-bottom 60px
                        color #fff

                        &::after 
                              content '' 
                              width 200px
                              height 8px
                              background #047fb8
                              display block
                              margin 0 auto


                  .brands__container-carousel
                        max-width 100%
                        
                        display flex
                        align-items center
                        border-radius 10px
                        
                        
                  li 
                        
                        
                        margin auto 20px   
                        
                        display flex
                        align-items center
                        justify-content center
                        
                 
                  img
                        max-width 300px
                        border-radius 5px
                        border 1px solid #222
                        margin auto 5px
                        
                              
                  
.interactive
      width 100vw
      
      &__container 
            max-width 1620px
            width 100%
            margin 0 auto
            
                        
            h2 
                  font-size 3rem
                  font-weight 700

                  text-transform uppercase
                  text-align center
                  //text-shadow 5px 5px 20px #2D5673

                  margin-bottom 60px
                  color #fff
      
                  &::after 
                        content '' 
                        width 400px
                        height 8px
                        background #047fb8
                        display block
                        margin 0 auto

            &-news
                  display flex
                  justify-content center
                  
                  gap 20px

                  &-left
                        max-width 800px
                        width 100%
                        
                  
                  .img-1
                        max-width 800px
                        width 100%
                        
                        
                        padding 10px
                        

                        img
                              width 100%
                              height 823px
                              object-fit cover
                              border-radius 5px

                  &-center, &-right
                        display block 
                        max-width 400px
                        width 100%

                        
                        

                  .img-2
                        max-width 400px
                        width 100%
                        height 50%
                        object-fit cover
                  
                        padding 10px

                        img
                              width 100%
                              height 400px
                              object-fit cover

                              border-radius 5px
                              

.newsletter
      max-width 100vw

      background-color #000

      padding 120px 0
      
      

      &__container
            max-width 70%
            
            padding 10px
            border-radius 10px
            margin 0 auto 

            display flex 
            justify-content space-between

            &-left
                  width 30%
                  

                  h2
                        font-size 4rem
                        line-height 4rem
                        font-weight 900 
                        color #fff                      

                  p
                        font-size 1.2rem
                        line-height 1.5rem
                        font-weight 400
                        color #fff  

            &-right
                  width 70%
                  //border 1px solid blue
                  display flex   

                  align-items center
                  justify-content center

                  input
                        width 40%
                        max-height 50px
                        height 100%
                        margin-left 20px

                        font-size 1.2rem
                        font-weight 400

                        padding 0 10px

                        border 1px solid #000
                        border-radius 3px

                        caret-color blue

                  .button__news
                        width 15%

                        font-size 1.2rem
                        font-weight 700
                        
                        border-radius 5px
                        border 1px solid #000

                        cursor pointer

                        transition 200ms all ease-in-out

                        &:hover
                              background-color #000
                              color #fff
                              text-shadow 5px 5px 20px #fff

                              border 1px solid #fff
                              border-radius 5px

.footer
      background #000
      width 100%

      &__links
            width 100%
            margin 0 auto
            border-top 1px solid rgba(231,233,238,0.149)
            border-bottom 1px solid rgba(231,233,238,0.149)
            padding 30px 0
            display flex
            justify-content center

            &-component
                  margin 10px 15px 

                  a
                        text-decoration none
                        color #717786

                        &:hover
                              color #fff
                              transition 0.25s all ease-in-out

      &__logo
            max-width 1330px
            width 100%
            margin 0 auto
            padding 20px 0
            justify-content center

            img
                  display block
                  margin 0 auto 
                  max-width 100px
                  width 100%    

      &__social
            display flex
            max-width 1330px
            width 100%
            margin 20px auto
            justify-content center

            &-item 
                  margin auto 10px 
                  display block
                  transition 200ms all ease-in-out

                  &:hover
                        transform scale(1.5)


      p
            color #717786
            text-align center     
            padding-bottom 10px         

      a     
            text-decoration none
            color #717786
            text-align center     
            